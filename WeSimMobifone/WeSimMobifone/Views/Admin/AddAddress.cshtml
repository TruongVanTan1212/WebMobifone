
@{
    ViewData["Title"] = "Thêm địa chỉ";
}
<section class="content">
    <div class="row">
        <div class="col-md-3"></div>
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header">
                    <h3>Thêm địa chỉ</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                <form role="form" asp-action="AddAddress">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="diachicuthe">Nhập địa chỉ cụ thể</label>
                            <input type="text" class="form-control" name="diachicuthe" placeholder="Enter địa chỉ">
                        </div>
                        <div class="form-group">
                            <label for="phuongxa">Nhập xã / phường</label>
                            <input type="text" class="form-control" name="phuongxa" placeholder="Enter xã / phường">
                        </div>
                        <div class="form-group">
                            <label for="quanhuyen">Nhập quận / huyện</label>
                            <input type="text" class="form-control" name="quanhuyen" placeholder="Enter quận / huyện">
                        </div>
                        <div class="form-group">
                            <label for="tinhthanh">Nhập tỉnh thành</label>
                            <input type="text" class="form-control" name="tinhthanh" placeholder="Enter tỉnh thành">
                        </div>
                    </div><!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Thêm</button>
                    </div>
                </form>
            </div><!-- /.box -->
        </div>
        <div class="col-md-3"></div>
    </div>
</section>
