@model IEnumerable<WeSimMobifone.Models.Hoadon>

@{
    ViewData["Title"] = "Thống kê";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <ol class="breadcrumb">
        <li><a asp-controller="Admin" asp-action="Index"><i class="fa fa-home"></i> Home</a></li>
        <li class="active">Thống kế báo cáo</li>
    </ol>
</section>
<!-- Small boxes (Stat box) -->
<div class="row">
    <div class="col-lg-4 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-aqua">
            <div class="inner">
                <h3>@ViewData["tongtien"] VNĐ<sup style="font-size: 20px"></sup></h3>
                <p>Tổng doanh thu: </p>
            </div>
            <div class="icon">
                <i class="ion ion-person-add"></i>
            </div>
            <a asp-controller="Admin" asp-action="Index" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div><!-- ./col -->
    <div class="col-lg-4 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-green">
            <div class="inner">
                <h3>@ViewData["SLDaNhan"]<sup style="font-size: 20px"></sup></h3>
                <p>Tổng đơn hàng: </p>
            </div>
            <div class="icon">
                <i class="ion ion-bag"></i>
            </div>
            <a asp-area="" asp-controller="Admin" asp-action="" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div><!-- ./col -->
    <div class="col-lg-4 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-teal">
            <div class="inner">
                <h3>@ViewData["SLDanhMuc"]<sup style="font-size: 20px"></sup></h3>
                <p>Thống kê theo danh mục</p>
            </div>
            <div class="icon">
                <i class="ion ion-stats-bars"></i>
            </div>
            <a asp-area="" asp-controller="Admin" asp-action="DaVanChuyen" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div><!-- ./col -->
</div><!-- /.row -->
<section class="content">
    <div class="row">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Tổng doanh thu : @ViewData["tongtienDH"] VNĐ</h3>
            </div><!-- /.box-header -->
            <form asp-controller="Admin" asp-action="BaoCao">
                <div class="box-tools">
                    <div class="input-group">
                        Từ: <input style="display: inline-block; width: 70px; " type="date" name="ngaybatdau" class="form-control " pattern="\d{2}/\d{2}/\d{4}" value="@ViewData["ngaybatdau"]" />
                        Đến: <input style="display: inline-block; width: 70px; " type="date" name="ngayketthuc" class="form-control" pattern="\d{2}/\d{2}/\d{4}" value="@ViewData[" ngayketthuc"]" />
                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </form>
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.MaHd)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ngay)
                            </th>
                            <th>
                                Số thuê bao
                            </th>
                            <th>
                                Khách hàng
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TongTien)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TrangThai)
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Hoadon item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaHd)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ngay)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaTbNavigation.SoThueBao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaKhNavigation.Ten)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TongTien)
                                </td>
                                <td>

                                    @if (item.TrangThai == 3)
                                    {
                                        <span class="label label-success">Giao Dịch Thành Công</span>
                                    }
                                </td>
                                <td>
                                    <a class="btn btn-block btn-success" asp-action="Details" asp-route-id="@item.MaHd">Chi Tiết</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.row -->
</section><!-- /.box -->