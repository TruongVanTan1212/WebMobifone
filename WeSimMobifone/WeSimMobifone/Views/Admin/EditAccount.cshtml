@{
     ViewData["Title"] = "Sửa thông tin tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <div class="row">
        <div class="col-md-3"></div>
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header">
                    <h3 >Sửa thông tin khách hàng</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                <form role="form" enctype="multipart/form-data" asp-action="EditAccount">
                    <div class="box-body">
                        <div class="form-group">
                            <input type="hidden" name="id" value="@ViewBag.khachhang.MaKh" />
                            <label for="ten">Họ và tên</label>
                            <input type="text" class="form-control" name="ten" value="@ViewBag.khachhang.Ten">
                        </div>
                        <div class="form-group">
                            <label for="dienthoai">Điện thoại</label>
                            <input type="text" class="form-control" name="dienthoai" value="@ViewBag.khachhang.DienThoai">
                        </div>
                        <div class="form-group">
                            <label for="email">Email </label>
                            <input type="email" class="form-control" name="email" value="@ViewBag.khachhang.Email">
                        </div>
                        <div class="form-group">
                            <label for="matkhau">Mật khẩu</label>
                            <input type="password" class="form-control" name="matkhau" value="@ViewBag.khachhang.MatKhau">
                        </div>
                        <div class="form-group">
                            <label for="cccd">Căn cước công dân</label>
                            <input type="text" class="form-control" name="cccd" value="@ViewBag.khachhang.Cccd">
                        </div>
                        <div class="form-group">
                            <label for="hinht">Ảnh mặt trước</label>
                            <input type="file" name="hinht" value="@ViewBag.khachhang.HinhT">
                            <p class="help-block">Hình ảnh phải rõ nét không bị mờ</p>
                        </div>
                        <div class="form-group">

                            <label for="hinhs">Ảnh mặt sau</label>
                            <input type="file" name="hinhs" value="@ViewBag.khachhang.HinhS">
                            <p class="help-block">Hình ảnh phải rõ nét không bị mờ</p>
                        </div>
                        
                    </div><!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div><!-- /.box -->
        </div>
        <div class="col-md-3"></div>
    </div>
 </section>
