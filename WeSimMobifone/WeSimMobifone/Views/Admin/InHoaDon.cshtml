@model WeSimMobifone.Models.Hoadon

@{
    ViewData["Title"] = "In hoá đơn";
}

    <!-- Main content -->
    <section class="invoice">
        <!-- title row -->
        <div class="row">
            <div class="col-xs-12">
                <h2 class="page-header">
                    <i class="fa fa-globe"></i> Thông tin chi tiết hoá đơn
                    <small class="pull-right">@Html.DisplayFor(model => model.Ngay)</small>
                </h2>
            </div><!-- /.col -->
        </div>
        <!-- info row -->
        <div class="row invoice-info">
            <div class="col-sm-4 invoice-col">
                From
                <address>
                    <strong>@ViewBag.cuahang.Ten</strong><br />
                    @ViewBag.cuahang.DiaChi<br />
                    Điện thoại: @ViewBag.cuahang.DienThoai <br />
                    Email: @ViewBag.cuahang.Email
                </address>
            </div><!-- /.col -->
            <div class="col-sm-4 invoice-col">
                To
                <address>
                    <strong>@Html.DisplayFor(model => model.MaKhNavigation.Ten)</strong><br>
                    @Html.DisplayFor(model => model.MaDcNavigation.DiaChi1), @Html.DisplayFor(model => model.MaDcNavigation.PhuongXa)<br>
                    @Html.DisplayFor(model => model.MaDcNavigation.QuanHuyen), @Html.DisplayFor(model => model.MaDcNavigation.TinhThanh)<br>
                    Phone: @Html.DisplayFor(model => model.MaKhNavigation.DienThoai) <br />
                    Email: @Html.DisplayFor(model => model.MaKhNavigation.Email) <br />
                    Căn Cước Công Dân : @Html.DisplayFor(model => model.MaKhNavigation.Cccd) <br />
                    
                </address>
            </div><!-- /.col -->
            <div class="col-sm-4 invoice-col">
                <b>Thông tin đơn hàng</b><br />
                <br />
                <b>Mã hoá đơn:</b> @Html.DisplayFor(model => model.MaHd)<br />
                <b>Ngày đặt:</b> @Html.DisplayFor(model => model.Ngay)<br />
                <b>Mã khách hàng:</b> @Html.DisplayFor(model => model.MaKhNavigation.MaKh)
            </div><!-- /.col -->
        </div><!-- /.row -->
        <!-- Table row -->
        <div class="row">
            <div class="col-xs-12 table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Mã thuê bao</th>
                            <th>Số Thuê bao</th>
                            <th>Loại số</th>
                            <th>Địa điểm hoà mạng</th>
                            <th>Phí Hoà mạng</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Html.DisplayFor(model => model.MaTbNavigation.MaTb)</td>
                            <td>@Html.DisplayFor(model => model.MaTbNavigation.SoThueBao)</td>
                            <td>@Html.DisplayFor(model => model.MaTbNavigation.LoaiSo)</td>
                            <td>@Html.DisplayFor(model => model.MaTbNavigation.DiaDiemHm)</td>
                            <td>@(Model.MaTbNavigation.PhiHoaMang.ToString("n0")) VNĐ</td>
                        </tr>
                    </tbody>
                </table>
            </div><!-- /.col -->
        </div><!-- /.row -->

        <div class="row">
            <!-- accepted payments column -->
            <div class="col-xs-6">
                <p class="lead">Payment Methods:</p>
                <img src="../../dist/img/credit/visa.png" alt="Visa" />
                <img src="../../dist/img/credit/mastercard.png" alt="Mastercard" />
                <img src="../../dist/img/credit/american-express.png" alt="American Express" />
                <img src="../../dist/img/credit/paypal2.png" alt="Paypal" />
                <p class="text-muted well well-sm no-shadow" style="margin-top: 10px;">
                    Sau khi nhận được SIM , xin quý khách vui lòng truy cập trang website Mobifone An Giang vào mục <b>" hướng dẫn "</b> chọn phần <b>" Kích hoạt "</b> làm theo hướng dẫn để có thể sử dụng SIM . Sau khi kích hoạt xong xin nhấn vào nút <b>"Kích hoạt" </b> tại mục<b>" lịch sử hoá đơn "</b>. Xin chân thành cảm ơn quý khách !
                </p>
            </div><!-- /.col -->
            <div class="col-xs-6">
                <p class="lead">Ngày đặt hàng: @Html.DisplayFor(model => model.Ngay)  </p>
                <div class="table-responsive">
                    <table class="table">
                        <tr>
                            <th style="width:50%">Phí hoà mạng:</th>
                        <td>@(Model.MaTbNavigation.PhiHoaMang.ToString("n0")) VNĐ</td>
                        </tr>
                        <tr>
                            <th>Phí giữ số:</th>
                            <td> 0 VND</td>
                        </tr>
                        <tr>
                            <th>Phí vận chuyển:</th>
                            <td> 0 VND</td>
                        </tr>
                        <tr>
                            <th>Thành tiền:</th>
                        <td>@(Model.MaTbNavigation.PhiHoaMang.ToString("n0")) VNĐ</td>
                        </tr>
                    </table>
                </div>
            </div><!-- /.col -->
        </div><!-- /.row -->
        <!-- this row will not appear when printing -->
        <div class="row no-print">
            <div class="col-xs-12">
                <a asp-action="InHoaDon1" asp-route-id="@Model.MaHd" target="_blank" class="btn btn-default"><i class="fa fa-print"></i> Print</a>
                <a asp-action="DaVanChuyenHang" asp-route-id="@Model.MaHd" class="btn btn-success pull-right"><i class="fa fa-credit-card"></i> Vận chuyển</a>
                <a class="btn btn-primary pull-right" style="margin-right: 5px;"><i class="fa fa-download"></i> Generate PDF</a>
            </div>
        </div>
    </section><!-- /.content -->

    <div class="clearfix"></div>
