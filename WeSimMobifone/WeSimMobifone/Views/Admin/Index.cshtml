@model IEnumerable<WeSimMobifone.Models.Hoadon>

@{
    ViewData["Title"] = "Hoá Đơn";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Dashboard
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a asp-controller="Hoadons" asp-action="Index"><i class="fa fa-home"></i> Home</a></li>
        <li class="active">Hoá Đơn</li>
    </ol>
</section>
<!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3>150</h3>
                    <p>SIM</p>
                </div>
                <div class="icon">
                    <i class="ion ion-bag"></i>
                </div>
                <a asp-area="" asp-controller="Thuebaos" asp-action="Index" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div><!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-green">
                <div class="inner">
                    <h3>53<sup style="font-size: 20px">%</sup></h3>
                    <p>Tin Tức</p>
                </div>
                <div class="icon">
                    <i class="ion ion-stats-bars"></i>
                </div>
                <a asp-area="" asp-controller="Tintucs" asp-action="Index" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div><!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-yellow">
                <div class="inner">
                    <h3>44</h3>
                    <p>Hướng Dẫn</p>
                </div>
                <div class="icon">
                    <i class="ion ion-person-add"></i>
                </div>
                <a asp-area="" asp-controller="Huongdans" asp-action="Index" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div><!-- ./col -->
    </div><!-- /.row -->

<section class="content">
    <div class="row">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Đơn Hàng</h3>
            </div><!-- /.box-header -->
            <div class="box-tools">
                <div class="input-group">
                    <form asp-controller="Admin" asp-action="SearchHD">
                        <input type="text" name="searchHoaDon" class="form-control input-sm pull-right" style="width: 150px;" placeholder="Search" />
                        <div class="input-group-btn">
                            <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.MaHd)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ngay)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MaTbNavigation)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MaKhNavigation)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TongTien)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TrangThai)
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaHd)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ngay)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaTbNavigation.SoThueBao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaKhNavigation.Ten)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TongTien)
                                </td>
                                <td>
                                    @if(item.TrangThai == 0)
                                    {
                                        <span class="label label-warning">Chờ Xét Duệt</span>
                                    }
                                    else
                                    {
                                        if (item.TrangThai == 1)
                                        {
                                            <span class="label label-info">Đã duyệt</span>
                                        }
                                        else
                                        {
                                            if (item.TrangThai == 2)
                                            {
                                                <span class="label label-success">Giao Dịch Thành Công</span>
                                            }
                                            else
                                            {
                                                if (item.TrangThai == 3)
                                                {
                                                    <span class="label label-danger">Đã huỷ</span>
                                                }
                                            }

                                        }
                                    }

                                </td>
                                <td>
                                     <a class="btn btn-block btn-warning" asp-action="Details" asp-route-id="@item.MaHd">Chi Tiết</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.row -->
</section><!-- /.box -->