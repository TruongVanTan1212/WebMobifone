@model IEnumerable<WeSimMobifone.Models.Hoadon>

@{
    ViewData["Title"] = "Index";
}

<section class="content">
    <div class="row">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Đơn Hàng</h3>
            </div><!-- /.box-header -->
            <div class="box-tools">
                <div class="input-group">
                    <input type="text" name="table_search" class="form-control input-sm pull-right" style="width: 150px;" placeholder="Search" />
                    <div class="input-group-btn">
                        <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                    </div>
                </div>
            </div>
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Ngay)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TongTien)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TrangThai)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MaKhNavigation)
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ngay)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TongTien)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TrangThai)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaKhNavigation.Ten)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.MaHd">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.MaHd">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.MaHd">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th> @Html.DisplayNameFor(model => model.Ngay)</th>
                            <th>@Html.DisplayNameFor(model => model.TongTien)</th>
                            <th>@Html.DisplayNameFor(model => model.TrangThai)</th>
                            <th>@Html.DisplayNameFor(model => model.MaKhNavigation)</th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.row -->
</section><!-- /.box -->
