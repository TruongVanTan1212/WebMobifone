@model IEnumerable<WeSimMobifone.Models.Chucvu>

@{
    ViewData["Title"] = "Index";
}

<section class="content">
    <div class="row">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Chức vụ</h3>
               
            </div><!-- /.box-header -->
            <div class="box-tools">
                <a class="btn btn-block btn-info" style="width: 150px; margin-left: 30px;" asp-action="Create">Thêm </a>
                <form asp-controller="Chucvus" asp-action="SearchChucVu" style="margin-right: 30px;">
                    <div class="input-group">
                        <input type="text" name="searchchucvu" class="form-control input-sm pull-right" style="width: 150px;" placeholder="Search" />
                        <div class="input-group-btn">
                            <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width: 10%;"> STT</th>
                            <th >
                                @Html.DisplayNameFor(model => model.Ten)
                            </th>
                            <th >
                                @Html.DisplayNameFor(model => model.HeSo)
                            </th>
                            <th ></th>
                            <th ></th>
                            <th ></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                        int i = 1;
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    @(i)
                                </td> 
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ten)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HeSo)
                                </td>
                                <td style="width: 5%;">
                                    <a class="btn btn-block btn-info" asp-action="Details" asp-route-id="@item.MaCv">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                </td>
                                <td style="width: 5%;">
                                    <a class="btn btn-block btn-success" asp-action="Edit" asp-route-id="@item.MaCv">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                </td>
                                <td style="width: 5%;">
                                    <a class="btn btn-block btn-danger" asp-action="Delete" asp-route-id="@item.MaCv">
                                        <i class="fa fa-trash-o"></i>
                                    </a>
                                </td>
                            </tr>
                            i++;
                        }
                        }
                    </tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.row -->
</section><!-- /.box -->

