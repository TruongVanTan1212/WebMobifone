@model IEnumerable<WeSimMobifone.Models.Cuahang>

@{
    ViewData["Title"] = "Index";
}

<section class="content">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="box">
                <div class="box box-warning">
                    <div class="box-header">
                        <i class="fa fa-envelope"></i>
                        <h3 class="box-title">Thông tin Công Ty</h3>
                        <!-- tools box -->
                    </div>
                    <div class="box-body">
                        <table class="table " style="font-size: 15px;">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model) {
                                    <tr>
                                        <td style="font-weight: bold; width: 30%"> @Html.DisplayNameFor(model => model.Ten):</td>
                                        <td style="text-align: right;">@Html.DisplayFor(modelItem => item.Ten)</td>
                                        <td style="width: 10%"></td>
                                    </tr>
                                    <tr>
                                        <td style="font-weight: bold; width: 30%">@Html.DisplayNameFor(model => model.DienThoai):</td>
                                        <td style="text-align: right;">@Html.DisplayFor(modelItem => item.DienThoai)</td>
                                        <td style="width: 10%"></td>
                                    </tr>
                                    <tr>
                                        <td style="font-weight: bold; width: 30%"> @Html.DisplayNameFor(model => model.Email):</td>
                                        <td style="text-align: right;">@Html.DisplayFor(modelItem => item.Email)</td>
                                        <td style="width: 10%"></td>
                                    </tr>
                                    <tr>
                                        <td style="font-weight: bold; width: 30%"> @Html.DisplayNameFor(model => model.DiaChi):</td>
                                        <td style="text-align: right;">@Html.DisplayFor(modelItem => item.DiaChi)</td>
                                        <td style="width: 10% "></td>
                                    </tr>
                                    <tr>
                                        <td style="text-align: right;"><a class="btn btn-block btn-primary" asp-action="Edit" asp-route-id="@item.MaCh">Sửa Thông tin </a></td>
                                    </tr>
                                    }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</section>

