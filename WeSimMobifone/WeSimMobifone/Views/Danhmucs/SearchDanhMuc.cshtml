@model IEnumerable<WeSimMobifone.Models.Danhmuc>

@{
    ViewData["Title"] = "Index";
}
<section class="content">
    <div class="row">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Danh Mục Thuê Bao</h3>
                <a class="btn btn-block btn-info" style="width: 150px;" asp-action="Create">Thêm danh mục</a>
            </div><!-- /.box-header -->
            <div class="box-tools">
                <a class="btn btn-block btn-info" style="width: 150px; margin-left: 30px;" asp-action="Create">Thêm danh mục</a>
                <form asp-controller="Danhmucs" asp-action="SearchDanhMuc" style="margin-right: 30px;">
                    <div class="input-group">
                        <input type="text" name="searchdanhmuc" class="form-control input-sm pull-right" style="width: 150px;" placeholder="Search" />
                        <div class="input-group-btn">
                            <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width: 30%">
                                @Html.DisplayNameFor(model => model.TenDm)
                            </th>

                            <th style="width: 15%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenDm)
                                </td>
                                <td>
                                    <div class="tools ">
                                        <a asp-action="Details" asp-route-id="@item.MaDm"><i class="fa fa-eye"></i></a>
                                        <a asp-action="Edit" asp-route-id="@item.MaDm"><i class="fa fa-edit"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.MaDm"><i class="fa fa-trash-o"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.row -->
</section><!-- /.box -->
