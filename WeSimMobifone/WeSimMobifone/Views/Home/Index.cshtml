@model IEnumerable<WeSimMobifone.Models.Thuebao>

@{
    ViewData["Title"] = "MobiFone An Giang";
}
    <div class="container-xxl py-5  hero-header mb-5" style="background-color: #007AFE;">
        <div class="container my-5 py-5 px-lg-5">
            <div class="row g-5 py-5">
                <div class="col-lg-6 text-center text-lg-start">
                    <h1 class="text-white mb-4 animated zoomIn">MobiFone Tỉnh An Giang</h1>
                    <p class="text-white pb-3 animated zoomIn">   Tất cả chúng ta đều muốn kết nối với thế giới xung quanh một cách dễ dàng và tiện lợi, và một sim mới có thể giúp bạn làm điều đó. Với một sim mới, bạn sẽ mở ra cánh cửa đến một thế giới của cơ hội mới, kết nối với bạn bè, gia đình và thế giới xung quanh một cách nhanh chóng và dễ dàng. Đừng bỏ lỡ cơ hội mở ra một thế giới mới, hãy mua ngay một sim và trải nghiệm sự tiện lợi và kết nối không giới hạn ngay từ bây giờ!</p>
                <a href="https://play.google.com/store/apps/details?id=vms.com.vn.mymobifone" class="btn btn-light py-sm-3 px-sm-5 rounded-pill me-3 animated slideInLeft">Google Play  <i class="fab fa-google-play fa-1x"></i></a>
                <a href="https://apps.apple.com/vn/app/my-mobifone/id719320091" class="btn btn-outline-light py-sm-3 px-sm-5 rounded-pill animated slideInRight">App Store  <i class="fab fa-apple fa-1x"></i></a>
                </div>
                <div class="col-lg-6 text-center text-lg-start">
                    <img class="img-fluid" src="/img/hero3.png" alt="">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Navbar & Hero End -->
<!-- Full Screen Search Start -->
<div class="container-xxl py-5">
    <div class="container px-lg-5">
        <div class="section-title position-relative text-center mb-5 pb-2 wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="position-relative d-inline text-primary ps-4">Trang Chủ</h6>
            <h2 class="mt-2">Sim số ưu đãi</h2>
        </div>
        <div class="row g-4">
            @foreach (var item in Model)
            {
                    <div class="col-lg-3 col-md-6 wow zoomIn" data-wow-delay="0.1s">
                        <div class="service-item d-flex flex-column justify-content-center text-center rounded" >
                        <div class="service-icon flex-shrink-0">
                            <i class="bi bi-sim-fill fa-2x"></i>
                        </div>
                        <h5 class="mb-3">@Html.DisplayFor(modelItem => item.SoThueBao)</h5>
                        <p>Phí hoà mạng: @Html.DisplayFor(modelItem => item.PhiHoaMang)K</p>
                        <p>Loại thuê bao: @Html.DisplayFor(modelItem => item.LoaiSo)</p>
                        <p>Điểm hoà mạng: @Html.DisplayFor(modelItem => item.DiaDiemHm)</p>
                        <a class="btn px-3 mt-auto mx-auto" asp-action="AddToCart" asp-route-id="@item.MaTb">Chọn Số</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div class="container-xxl py-5">
    <div class="container px-lg-5">
        <div class="section-title position-relative text-center mb-5 pb-2 wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="position-relative d-inline text-primary ps-4">Tin Tức</h6>
            <h2 class="mt-2">Cập nhật những tin tức mới nhất</h2>
        </div>
        <div class="row mt-n2 wow fadeInUp" data-wow-delay="0.1s">
            <div class="col-12 text-center">
                <ul class="list-inline mb-5" id="portfolio-flters">
                    <li class="btn px-3 pe-4 active" data-filter="*">Tất cả</li>
                    <li class="btn px-3 pe-4" data-filter=".first">Sim</li>
                    <li class="btn px-3 pe-4" data-filter=".second">Gói Cước</li>
                </ul>
            </div>
        </div>
        <div class="row g-4 portfolio-container">
            @foreach (var i in (List<Tintuc>)ViewBag.tintuc)
            {
                <div class="col-lg-4 col-md-6 portfolio-item first wow zoomIn" data-wow-delay="0.1s">
                    <div class="position-relative rounded overflow-hidden">
                        <img class="img-fluid w-100" src="img/@i.HinhAnh" alt="" style="width: 350px; height: 200px;">
                        <div class="portfolio-overlay">
                            <a class="btn btn-light" href="@i.HinhAnh" data-lightbox="portfolio"><i class="fa fa-plus fa-2x text-primary"></i></a>
                            <div class="mt-auto">
                                <small class="text-white"><i class="fa fa-folder me-2"></i>@i.TieuDe</small>
                                <a class="h5 d-block text-white mt-1 mb-0" href="">@i.TomTat</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

