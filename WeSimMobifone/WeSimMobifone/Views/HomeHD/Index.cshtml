@model IEnumerable<WeSimMobifone.Models.Huongdan>

@{
    ViewData["Title"] = "Index";
}
    <div class="container-xxl py-5  hero-header mb-5" style="background-color: #007AFE;">
        <div class="container my-5 py-5 px-lg-5">
            <div class="row g-5 py-5">
                <div class="col-12 text-center">
                    <h1 class="text-white animated zoomIn">Hướng Dẫn</h1>
                    <hr class="bg-white mx-auto mt-0" style="width: 90px;">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item"><a class="text-white" asp-controller="Homes" asp-action="Index">Trang Chủ</a></li>
                            <li class="breadcrumb-item"><a class="text-white" href="#">Hướng Dẫn</a></li>
                            <li class="breadcrumb-item text-white active" aria-current="page">Câu hỏi thường gặp</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-xxl py-5">
    <div class="container px-lg-5">
        <div class="row g-4">
            @foreach (var item in Model)
            {
            <div class="col-12">
               <div id="accordion">
                    <div class="card">
                        <div class="card-header">
                                <a class="btn" data-bs-toggle="collapse" href="#so">
                                @Html.DisplayFor(modelItem => item.CauHoi)
                             </a>
                        </div>
                            <div id="so" class="collapse" data-bs-parent="#accordion">
                            <div class="card-body">
                                @Html.DisplayFor(modelItem => item.TraLoi)
                            </div>
                        </div>
                    </div>
                </div>
             </div>
            }
        </div>
    </div>
</div>
