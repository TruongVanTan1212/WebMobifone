@model WeSimMobifone.Models.Tintuc

@{
    ViewData["Title"] = "Details";
}
<div class="container-xxl py-5  hero-header mb-5" style="background-color: #007AFE;">
    <div class="container my-5 py-5 px-lg-5">
        <div class="row g-5 py-5">
            <div class="col-12 text-center m-4">
                <h1 class="text-white animated zoomIn">Tin Tức</h1>
                <hr class="bg-white mx-auto mt-0" style="width: 90px;">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item"><a class="text-white" asp-controller="Homes" asp-action="Index">Trang Chủ</a></li>
                        <li class="breadcrumb-item"><a class="text-white" href="#"></a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page">Chi Tiết Tin tức</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
</div>
<!-- Navbar & Hero End-->
      <!-- About Start -->
      <div class="container-xxl py-5">
        <div class="container px-lg-5">
            <div class="row g-5">
                 <div class="col-lg-4">
                    <img class="img-fluid wow zoomIn shadow" style="margin-top: 100px;" data-wow-delay="0.5s" src="/img/@Html.DisplayFor(model => model.HinhAnh)">
                </div>
                <div class="col-lg-8 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="section-title position-relative mb-4 pb-2">
                        <h6 class="position-relative text-primary ps-4">About Us</h6>
                        <h2 class="mt-2">@Html.DisplayFor(model => model.TieuDe)</h2>
                    </div>
                    <p class="mb-4">@Html.DisplayFor(model => model.NoiDung)</p>
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <h6 class="mb-3"><i class="fa fa-check text-primary me-2"></i>Ngày Đăng: @Html.DisplayFor(model => model.NgayDang) </h6>
                        </div>
                    </div>
                    <div class="d-flex align-items-center mt-4">
                    <a class="btn btn-primary rounded-pill px-4 me-3" asp-action="Index">Trở về</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- About End -->