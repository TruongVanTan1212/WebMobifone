@model IEnumerable<WeSimMobifone.Models.Tintuc>

@{
    ViewData["Title"] = "Index";
}


    <div class="container-xxl py-5  hero-header mb-5" style="background-color: #007AFE;">
        <div class="container my-5 py-5 px-lg-5">
            <div class="row g-5 py-5">
                <div class="col-12 text-center m-4">
                    <h1 class="text-white animated zoomIn">Tin Tức</h1>
                    <hr class="bg-white mx-auto mt-0" style="width: 90px;">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item"><a class="text-white" asp-controller="Homes" asp-action="Index">Trang Chủ</a></li>
                            <li class="breadcrumb-item"><a class="text-white" href="#"></a></li>
                            <li class="breadcrumb-item text-white active" aria-current="page">Tin Tức</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Navbar & Hero End-->

<div class="container-xxl py-5">
   <div class="container px-lg-5">
        <div class="section-title position-relative text-center mb-5 pb-2 wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="position-relative d-inline text-primary ps-4">Tin Tức</h6>
            <h2 class="mt-2">cập nhật những tin tức mới nhất về các chương trình khuyến mãi</h2>
        </div>
        <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-lg-6 col-md-6 wow zoomIn" data-wow-delay="0.1s">
            <div class="service-item d-flex flex-column justify-content-center text-center rounded">
            <div class=" flex-shrink-0 ">
                   <img src="~/img/@Html.DisplayFor(modelItem => item.HinhAnh)" width="350px" height="200px" />
             </div>
                <h5 class="mb-3">@Html.DisplayFor(modelItem => item.TieuDe)</h5>
                <p>@Html.DisplayFor(modelItem => item.TomTat)</p>
                <p>Ngày Đăng: @Html.DisplayFor(modelItem => item.NgayDang)</p>
                <a class="btn px-3 mt-auto mx-auto" href="">Chi tiết</a>
            </div>
            </div>
        }
        </div>
    </div>
</div>
