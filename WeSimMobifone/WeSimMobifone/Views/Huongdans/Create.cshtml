@model WeSimMobifone.Models.Huongdan

@{
    ViewData["Title"] = "Create";
}
<section class="content">
    <div class="row">
        <div class="col-md-3"></div>
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header">
                    <h3>Thêm câu hỏi hướng dẫn</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                <form role="form" asp-action="Create">
                    <div class="box-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="CauHoi" class="control-label"></label>
                            <input asp-for="CauHoi" class="form-control" />
                            <span asp-validation-for="CauHoi" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TraLoi" class="control-label"></label>
                            <input asp-for="TraLoi" class="form-control" />
                            <span asp-validation-for="TraLoi" class="text-danger"></span>
                        </div>
                    </div><!-- /.box-body -->
                    <div class="box-footer">
                        <input type="submit" value="Thêm" class="btn btn-primary" />
                        <a class="btn btn-danger" asp-action="Index">Hủy</a>
                    </div>
                </form>
            </div><!-- /.box -->
        </div>
        <div class="col-md-3"></div>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
