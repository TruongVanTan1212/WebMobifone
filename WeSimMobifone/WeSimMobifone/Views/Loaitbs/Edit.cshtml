@model WeSimMobifone.Models.Loaitb

@{
    ViewData["Title"] = "Edit";
}
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header">
                    <h3>Sửa Loại Thuê Bao</h3>
                </div><!-- /.box-header -->
                <form role="form" asp-action="Edit" method="post">
                    <div class="box-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="MaLtb" />
                        <div class="form-group">
                            <label asp-for="TenL" class="control-label"></label>
                            <input asp-for="TenL" class="form-control" />
                            <span asp-validation-for="TenL" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </form>
            </div><!-- /.box -->
        </div>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
