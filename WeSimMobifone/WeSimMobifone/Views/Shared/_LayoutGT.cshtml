<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>MobiFone An Giang</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="/img/logobanger.jpg" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500&family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Libraries Stylesheet -->
    <link href="/lib/animate/animate.min.css" rel="stylesheet">
    <link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="/lib/lightbox/css/lightbox.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <!-- <link href="css/bootstrap.min.css" rel="stylesheet">-->
    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Template Stylesheet -->
    <!-- <link href="/css/style.css" rel="stylesheet">-->
    <link href="/css/style.css" rel="stylesheet" />
</head>

<body>
    <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-grow text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Navbar & Hero Start -->
        <div class="container-xxl position-relative p-0">
            <nav class="navbar navbar-expand-lg navbar-light px-4 px-lg-5 py-3 py-lg-0">
                <a href="" class="navbar-brand p-0">
                    <!--logo <h1 class="m-0"><i class="fa fa-search me-2"></i>SEO<span class="fs-5">Master</span></h1>-->
                    <img src="/img/logo_mobifone.png" alt="Logo" width="250" height="100">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="fa fa-bars"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav ms-auto py-0">
                        <a asp-controller="Home" asp-action="Index" class="nav-item nav-link ">Trang Chủ</a>
                        <a asp-controller="HomeTT" asp-action="Index" class="nav-item nav-link">Tin Tức</a>
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Danh Mục</a>
                            <div class="dropdown-menu m-0">
                                @foreach (var i in (List<Danhmuc>)ViewBag.danhmuc)
                                {
                                    <a class="dropdown-item" asp-controller="Home" asp-action="DanhMucSP" asp-route-id="@i.MaDm">@i.TenDm</a>
                                }
                            </div>
                        </div>
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Hướng Dẫn</a>
                            <div class="dropdown-menu m-0">
                                <a asp-controller="HomeHD" asp-action="KichHoat" class="dropdown-item">Kích Hoạt Sim</a>
                                <a asp-controller="HomeHD" asp-action="Index" class="dropdown-item">Câu Hỏi Thường Gặp</a>
                            </div>
                        </div>
                        <a asp-controller="Home" asp-action="GioiThieu" class="nav-item nav-link active">Giới Thiệu</a>
                        
                    </div>

                    <!-- <a type="button" class="btn text-primary ms-3" asp-controller="Home" asp-action="ViewCart"><i class="bi bi-cart-check-fill"></i><span class="badge bg-danger text-white ms-1 rounded-pill">@ViewData["solg"]</span></a>-->
                    @if (ViewBag.khachhang != null)
                    {
                        <a asp-controller="Admin" asp-action="Customer" class="btn btn-primary text-light rounded-pill py-2 px-4 ms-3">@ViewBag.khachhang.Ten</a>
                    }
                    else
                    {
                        @if (ViewBag.Nhanvien != null)
                        {
                            <a asp-controller="Admin" asp-action="Index" class="btn btn-primary text-light rounded-pill py-2 px-4 ms-3"> @ViewBag.nhanvien.Ten</a>
                        }
                        else
                        {
                            <a asp-controller="Home" asp-action="Login" class="btn btn-primary text-light rounded-pill py-2 px-4 ms-3">Đăng Nhập</a>
                        }
                    }
                </div>
            </nav>


            <!-- Full Screen Search End -->
            <div>
                @RenderBody()
            </div>

            <!-- Portfolio Start -->
            <!-- Footer Start -->
            <div class="container-fluid  text-light footer mt-5 pt-5 wow fadeIn" style="background-color: #007AFE;" data-wow-delay="0.1s">
                <div class="container py-5 px-lg-5">
                    <div class="row g-5">
                        <div class="col-md-6 col-lg-3">
                            @foreach (var i in (List<Cuahang>)ViewBag.cuahang)
                            {
                                <h5 class="text-white mb-4">Thông tin công ty</h5>
                                <p><i class="fa fa-map-marker-alt me-3"></i>@i.DiaChi</p>
                                <p><i class="fa fa-phone-alt me-3"></i>+@i.DienThoai</p>
                                <p><i class="fa fa-envelope me-3"></i>@i.Email</p>
                            }
                            <div class="d-flex pt-2">
                                <a class="btn btn-outline-light btn-social" href="https://www.facebook.com/mobifonetinhangiang"><i class="fab fa-facebook-f"></i></a>
                                <a class="btn btn-outline-light btn-social" href="https://www.youtube.com/channel/UCN9i2HY175c08D3oHLvLwYA"><i class="fab fa-youtube"></i></a>
                            </div>

                        </div>
                        <div class="col-md-6 col-lg-3">
                            <h5 class="text-white mb-4">Danh Mục Sim</h5>
                            @foreach (var i in (List<Danhmuc>)ViewBag.danhmuc)
                            {
                                <a class="btn btn-link" asp-controller="Home" asp-action="DanhMucSP" asp-route-id="@i.MaDm">@i.TenDm</a>
                            }
                        </div>
                        <div class="col-md-6 col-lg-3">
                            <h5 class="text-white mb-4">Mobifone An Giang</h5>
                            <div class="row g-2">
                                <div class="col-12">
                                    <img src="~/img/logodathongqua.webp" alt="Image" width="170px" height="70px" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-3">
                            <h5 class="text-white mb-4">Google Map</h5>
                            <div class="col-12">
                                <iframe class="img-fluid" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d502818.66471767356!2d104.95838826931718!3d10.076881764969905!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x310a7307d5714811%3A0xcda168ec36f6ae1f!2sMobiFone%20T%E1%BB%89nh%20An%20Giang!5e0!3m2!1svi!2s!4v1711442537846!5m2!1svi!2s" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container px-lg-5">
                    <div class="copyright">
                        <div class="row">
                            <div class="col-md-12 text-center ">
                                &copy; <a class="border-bottom" href="https://mobifoneangiang.com/">Mobifone An Giang</a>.
                                Designer By <a class="border-bottom" href="https://htmlcodex.com">DTH205971 . Trương Văn Tân . DH21TH1</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Footer End -->
            <!-- Back to Top -->
            <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top pt-2"><i class="bi bi-arrow-up"></i></a>
        </div>

        <!-- JavaScript Libraries -->
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

        <script src="/lib/wow/wow.min.js"></script>
        <script src="/lib/easing/easing.min.js"></script>
        <script src="/lib/waypoints/waypoints.min.js"></script>
        <script src="/lib/owlcarousel/owl.carousel.min.js"></script>
        <script src="/lib/isotope/isotope.pkgd.min.js"></script>
        <script src="/lib/lightbox/js/lightbox.min.js"></script>

        <!-- Template Javascript -->
        <script src="/js/main.js"></script>
</body>
</html>
