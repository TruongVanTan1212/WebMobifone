@model WeSimMobifone.Models.Thuebao

@{
    ViewData["Title"] = "Create";
}
<section class="content">
    <div class="row">
        <div class="col-md-3"></div>
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header">
                    <h3>Thêm thuê bao</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                <form role="form" asp-action="Create">
                    <div class="box-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="SoThueBao" class="control-label"></label>
                            <input asp-for="SoThueBao" class="form-control" />
                            <span asp-validation-for="SoThueBao" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PhiHoaMang" class="control-label"></label>
                            <input asp-for="PhiHoaMang" class="form-control" />
                            <span asp-validation-for="PhiHoaMang" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MaDm" class="control-label"></label>
                            <select asp-for="MaDm" class="form-control" asp-items="ViewBag.MaDm"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="MaLtb" class="control-label"></label>
                            <select asp-for="MaLtb" class="form-control" asp-items="ViewBag.MaLtb"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="LoaiSo" class="control-label"></label>
                            <select asp-for="LoaiSo" class="form-control">
                                <option>Trả trước</option>
                                <option>Trả sau</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="DiaDiemHm" class="control-label"></label>
                            <select asp-for="DiaDiemHm" class="form-control">
                                <option>Toàn quốc</option>
                                <option>TP HCM</option>
                                <option>Hà Nội</option>
                            </select>
                            <span asp-validation-for="DiaDiemHm" class="text-danger"></span>
                        </div>
                    </div><!-- /.box-body -->
                    <div class="box-footer">
                        <input type="submit" value="Thêm" class="btn btn-primary" />
                        <a class="btn btn-danger" asp-action="Index">Hủy</a>
                    </div>
                </form>
            </div><!-- /.box -->
        </div>
        <div class="col-md-3"></div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
