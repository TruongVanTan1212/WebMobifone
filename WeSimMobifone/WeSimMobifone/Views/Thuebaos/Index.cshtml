@model IEnumerable<WeSimMobifone.Models.Thuebao>

@{
    ViewData["Title"] = "Thuê Bao";
}

<section class="content">
    <div class="row">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Thuê Bao</h3>
            </div><!-- /.box-header -->
            <div class="box-tools">
                <a class="btn btn-block btn-info" style="width: 150px; margin-left: 30px;" asp-action="Create">Add SIM</a>
                <form asp-controller="Thuebaos" asp-action="SearchThueBao" style="margin-right: 30px;">
                    <div class="input-group">
                        <input type="text" name="searchThueBao" class="form-control input-sm pull-right" style="width: 150px;" placeholder="Search" />
                        <div class="input-group-btn">
                            <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped text-center" style=" height:100%;">
                    <thead>
                        <tr>
                            <th >
                                @Html.DisplayNameFor(model => model.SoThueBao)
                            </th>
                            <th >
                                @Html.DisplayNameFor(model => model.PhiHoaMang)
                            </th>
                            <th >
                                @Html.DisplayNameFor(model => model.LoaiSo)
                            </th>
                            <th >
                                @Html.DisplayNameFor(model => model.DiaDiemHm)
                            </th>
                            <th >
                                @Html.DisplayNameFor(model => model.TrangThai)
                            </th>
                            <th >
                                Danh mục SIM
                            </th>
                            <th >
                               Loại SIM
                            </th>
                            <th ></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SoThueBao)
                                </td>
                                <td>
                                     @(item.PhiHoaMang.ToString("n0")) VNĐ
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LoaiSo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DiaDiemHm)
                                </td>
                                <td>
                                    @if (item.TrangThai == 0)
                                    {
                                        <span class="label label-success">Trống</span>
                                    }
                                    else
                                    {
                                        if (item.TrangThai == 1)
                                        {
                                            <span class="label label-warning">Giao Dịch</span>
                                        }
                                        else
                                        {
                                            if(item.TrangThai == 2)
                                            {
                                                <span class="label label-danger">Kích Hoạt</span>
                                            }
                                        }
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaDmNavigation.TenDm)
                                </td>
                                <td >
                                    @Html.DisplayFor(modelItem => item.MaLtbNavigation.TenL)
                                </td>
                                <td style="width: 5%;">
                                    <a class="btn btn-block btn-info" asp-action="Details" asp-route-id="@item.MaTb">
                                        <i class="fa fa-eye"></i> 
                                    </a>
                                </td>
                                <td style="width: 5%;">
                                    @if (item.TrangThai == 0)
                                    {
                                        <a class="btn btn-block btn-success" asp-action="Edit" asp-route-id="@item.MaTb">
                                            <i class="fa fa-edit"></i> 
                                        </a>
                                    }
                                </td>
                                <td style="width: 5%;">
                                    @if (item.TrangThai == 0)
                                    {
                                        <a class="btn btn-block btn-danger" asp-action="Delete" asp-route-id="@item.MaTb">
                                            <i class="fa fa-trash-o"></i> 
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.row -->
</section><!-- /.box -->