@model WeSimMobifone.Models.Tintuc

@{
    ViewData["Title"] = "Create";
}
@section Scripts {
    <script src="https://cdn.ckeditor.com/ckeditor5/41.3.1/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#txt_detail'), {
                //toolbar: [ 'heading', '|', 'bold', 'italic', 'link' ]
            })
            .then(editor => {
                window.editor = editor;
            })
            .catch(err => {
                console.error(err.stack);
            });
    </script>
    <script>
        ClassicEditor
            .create(document.querySelector('#txt_detail1'), {
                //toolbar: [ 'heading', '|', 'bold', 'italic', 'link' ]
            })
            .then(editor => {
                window.editor = editor;
            })
            .catch(err => {
                console.error(err.stack);
            });
    </script>
    <script>
        ClassicEditor
            .create(document.querySelector('#txt_detail2'), {
                //toolbar: [ 'heading', '|', 'bold', 'italic', 'link' ]
            })
            .then(editor => {
                window.editor = editor;
            })
            .catch(err => {
                console.error(err.stack);
            });
    </script>
}

<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header">
                    <h3>Thêm tin tức</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                <form role="form" asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="box-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="TieuDe" class="control-label"></label>
                            <textarea id="txt_detail" asp-for="TieuDe" class="form-control" style="width: 100%; height: 125px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
                            <span asp-validation-for="TieuDe" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TomTat" class="control-label"></label>
                            <textarea id="txt_detail1" asp-for="TomTat" class="form-control" style="width: 100%; height: 125px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
                            <span asp-validation-for="TomTat" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NoiDung" class="control-label"></label>
                            <textarea id="txt_detail2" asp-for="NoiDung" class="form-control" style="width: 100%; height: 125px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
                            <span asp-validation-for="NoiDung" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="HinhAnh" class="control-label"></label>
                            <input type="file" name="file" asp-for="HinhAnh" class="form-control" />
                            <span asp-validation-for="HinhAnh" class="text-danger"></span>
                        </div>
                    </div><!-- /.box-body -->
                    <div class="box-footer">
                        <input type="submit" value="Thêm" class="btn btn-primary" />
                        <a class="btn btn-danger" asp-action="Index">Hủy</a>
                    </div>
                </form>
            </div><!-- /.box -->
        </div>
    </div>
</section>

