@model IEnumerable<WeSimMobifone.Models.Tintuc>

@{
    ViewData["Title"] = "Tin Tức";
}
<section class="content">
    <div class="row">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Tin Tức</h3> 
                <a class="btn btn-block btn-info" style="width: 150px;" asp-action="Create">Add News</a>
            </div><!-- /.box-header -->
            <div class="box-tools">
                <div class="input-group">
                    <form asp-controller="Tintucs" asp-action="SearchTT">
                        <input type="text" name="searchTinTuc" class="form-control input-sm pull-right" style="width: 150px;" placeholder="Search" />
                        <div class="input-group-btn">
                            <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped text-center">
                    <thead>
                        <tr>
                            <th >
                                @Html.DisplayNameFor(model => model.TieuDe)
                            </th>
                            <th >
                                @Html.DisplayNameFor(model => model.TomTat)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.HinhAnh)
                            </th>
                            <th >
                                @Html.DisplayNameFor(model => model.NgayDang)
                            </th>
                            <th ></th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="width:20%;">
                                    @Html.DisplayFor(modelItem => item.TieuDe)
                                </td>
                                <td style="width:40%;">
                                    @Html.DisplayFor(modelItem => item.TomTat)
                                </td>
                                <td style="width:20%;">
                                    <img src="~/img/@Html.DisplayFor(modelItem => item.HinhAnh)" width="150" height="" />
                                </td>
                                <td style="width:10%;">
                                    @Html.DisplayFor(modelItem => item.NgayDang)
                                </td>
                                <td style="width:10%;">
                                    <div class="tools">
                                        <a style="margin: 0 5px 0 5px" asp-action="Details" asp-route-id="@item.MaTin"><i class="fa fa-eye"></i></a>
                                        <a style="margin-right: 5px" asp-action="Edit" asp-route-id="@item.MaTin"><i class="fa fa-edit"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.MaTin"><i class="fa fa-trash-o"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.row -->
</section><!-- /.box -->
